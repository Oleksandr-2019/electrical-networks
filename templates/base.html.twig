<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}
    {% block javascripts %}
        <script src="{{ asset('jquery/jquery-3.4.1.min.js') }}"></script>
        <script src="{{ asset('js/main.js') }}"></script>
    {% endblock %}
    {# beware that the blocks in your template may be named different #}
    {% block head_css %}
        <link rel="stylesheet" href="{{ asset('bootstrap-4.4.1/css/bootstrap.css') }}">
    {% endblock %}
    {% block head_js %}
        <script src="{{ asset('bootstrap-4.4.1/js/bootstrap.js') }}"></script>
    {% endblock %}
</head>
<body>

    <div class="wrapper">

        <div class="content">

            <!-- header-main -->
            {{ render(controller(
                'App\\Controller\\headerController::headerFunction'
            )) }}

            <div class="main">

                {% block body %}{% endblock %}

            </div>

        </div>


        <!-- footer-main -->
        <div class="footer">
            <footer class="footer-main">
                        <span class="footer-main__copyright">
                            Електричні мережі &copy; Copyright
                        </span>
            </footer>
        </div>

    </div>

</body>
</html>
